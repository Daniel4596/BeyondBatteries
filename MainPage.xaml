<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BeyondBatteries.MainPage">

    <VerticalStackLayout>
        <HorizontalStackLayout Spacing="250">
            <ImageButton
                x:Name="BLEConnect"
                Source="ble.png"
                Clicked="OnPress"
                HeightRequest="20"
                WidthRequest="60"
                />
            <Image 
                Source="Ostfalia.svg"
                Aspect="AspectFit"
                MaximumHeightRequest="90"
                />
            
        </HorizontalStackLayout>
        <ListView x:Name="foundBleDevicesListView" 
                  Footer=" "
                  ItemTapped="FoundBluetoothDevicesListView_ItemTapped" />
        <ActivityIndicator x:Name="IsBusyIndicator"
                               Scale="0.3"/>

    </VerticalStackLayout>

</ContentPage>
